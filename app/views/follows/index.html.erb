<div>
  <div>
    <h1>
      List of all follows
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new follow
    </h2>

    <form action="/insert_follow" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="artist_id_box">
          Artist
        </label>

        <input type="text" id="artist_id_box" name="query_artist_id">
      </div>

      <button>
        Create follow
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Artist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_follows.each do |a_follow| %>
      <tr>
        <td>
          <%= a_follow.id %>
        </td>

        <td>
          <%= a_follow.user_id %>
        </td>

        <td>
          <%= a_follow.artist_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_follow.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_follow.updated_at) %> ago
        </td>

        <td>
          <a href="/follows/<%= a_follow.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
