<div>
  <div>
    <h1>
      List of all tours
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new tour
    </h2>

    <form action="/insert_tour" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create tour
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_tours.each do |a_tour| %>
      <tr>
        <td>
          <%= a_tour.id %>
        </td>

        <td>
          <%= a_tour.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_tour.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_tour.updated_at) %> ago
        </td>

        <td>
          <a href="/tours/<%= a_tour.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
