<div>
  <div>
    <h1>
      Tour #<%= @the_tour.id %> details
    </h1>

    <div>
      <div>
        <a href="/tours">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_tour/<%= @the_tour.id %>">
          Delete tour
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_tour.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_tour.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_tour.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit tour
    </h2>

    <form action="/modify_tour/<%= @the_tour.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_tour.name %>">
      </div>

      <button>
        Update tour
      </button>
    </form>
  </div>
</div>

<hr>
